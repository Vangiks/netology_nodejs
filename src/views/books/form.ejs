<form method="post" class="mt-3" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Заголовок</label>
        <input type="text" value="<%= book.title %>" name="title" class="form-control" id="title">
    </div>

    <div class="form-group">
        <label for="description">Описание</label>
        <textarea rows="3" name="description" class="form-control" id="description"><%= book.description %></textarea>
    </div>

    <div class="form-group">
        <label for="authors">Автор</label>
        <input type="text" value="<%= book.authors %>" name="authors" class="form-control" id="authors">
    </div>

    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="favorite" <%=book.favorite ? "checked" : "" %>
            id="favorite">
            <label class="form-check-label" for="favorite">
                Избранное
            </label>
        </div>
    </div>

    <div class="form-group">
        <label for="counter">Количество просмотра книг</label>
        <input type="number" disabled value="<%= book.counter %>" name="counter" class="form-control">
    </div>

    <div class="form-group">
        <label for="fileCover">Обложка файла</label>
        <input type="text" value="<%= book.fileCover %>" name="fileCover" class="form-control" id="fileCover">
    </div>

    <div class="form-group">
        <label for="fileName">Имя файла</label>
        <input type="text" value="<%= book.fileName %>" name="fileName" class="form-control" id="fileName">
    </div>

    <div class="mb-3">
        <label for="fileBook" class="form-label">Выберите файл</label>
        <input class="form-control" type="file" name="fileBook" id="fileBook">
    </div>

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>